<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentSection"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/linear_border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_border"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Back Arrow"
                app:srcCompat="@drawable/back_arrow"
                android:background="@null"
                />

            <TextView
                android:id="@+id/tvUsernameComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Comment"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>
            <!--  RecyclerView placed inside the LinearLayout  -->
        <!--  Horizontal LinearLayout containing EditText and Send Button  -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvViewComments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/linear_border">
                <!--  EditText for typing comments  -->
                <EditText
                    android:id="@+id/etComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Comment Something"
                    android:inputType="text"
                    android:textSize="13sp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:maxLength="150"/>
                <!--  Send button on the right  -->
            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="Send Comment"
                android:src="@drawable/ic"
                android:layout_gravity="center_vertical"
                android:padding="7dp"/>

        </LinearLayout>
        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>